<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio1Invertir6657336.MainPage">


    <!--La etiqueta permite organizar los elementos secundarios ya sea horizontal o verticalmente-->
    <StackLayout>

        <!--Ponemos un label donde se pide que ingrese la persona los 4 numeros-->
        <Label Text="Ingrese 4 números:" VerticalOptions="Center" HorizontalOptions="Center" />

        <!--Ponemos los entry donde las persona ingresara los 4 numeros con  propiedad Placeholder-->
        <Entry x:Name="Numero1" Placeholder="Número 1" />
        <Entry x:Name="Numero2" Placeholder="Número 2" />
        <Entry x:Name="Numero3" Placeholder="Número 3" />
        <Entry x:Name="Numero4" Placeholder="Número 4" />

        <!--Le ponemos el boton que ara el proceso de invertir los numeros con su eventeo Button_Clicked-->
        <Button Text="Invertir" Clicked="Button_Clicked" />

        <!--Ponemos un label donde iran los numeros invertidos ya-->
        <Label x:Name="ResultadoLabel" VerticalOptions="Center" HorizontalOptions="Center" />

        <!--Una imagen aluciba al programa-->
        <Image Source="invertido.jpeg" VerticalOptions="Center" HorizontalOptions="Center" 
               WidthRequest="250" HeightRequest="250"/>

    </StackLayout>

</ContentPage>
    