<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio5altura6657336.MainPage">

    <!--Ponemos la etiqueta StackLayout para poder organizar los metodos en horizontal o vertical-->
    <StackLayout>
        
        <!--Ponemos 2 entry donde se ingresara la altura y la base de el triangulo-->
        <Entry x:Name="alturaEntry" Placeholder="Ingrese la altura" />
        <Entry x:Name="baseEntry" Placeholder="Ingrese la base" />

        <!--Ponemos el boton donde se calculara la base y altura con el evento Button_Clicked-->
        <Button Text="Calcular" Clicked="Button_Clicked"/>
        
        <!--Ponemos 2 label donde se mostraran el erimetro y la superficie--> 
        <Label x:Name="ResultadoLabel1"/>
        <Label x:Name="ResultadoLabel2"/>
        
        <Image Source="Base.png" />
        
    </StackLayout>

</ContentPage>
